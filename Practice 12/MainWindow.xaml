<Window x:Class="Practice_12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Массив">
                <StackPanel>
                    <TextBox Name="vvodEl" Width="300" Margin="10" />
                    <Button Content="Ввод массива" Click="Button2_Click" Margin="10" />
                    <Button Content="Показать Max, Min, Sum, Avg" Click="StatisticsButton_Click" Margin="10" />
                    <Button Content="Проверить наличие элемента" Click="AnyButton_Click" Margin="10" />
                    <Button Content="Очистить массив" Click="ClearButton_Click" Margin="10" />
                    <Button Content="Копировать массив" Click="CopyButton_Click" Margin="10" />
                    <Button Content="Проверить наличие элемента" Click="ExistsButton_Click" Margin="10" />
                    <Button Content="Найти элемент" Click="FindButton_Click" Margin="10" />
                    <Button Content="Найти все элементы" Click="FindAllButton_Click" Margin="10" />
                    <Button Content="Индекс элемента" Click="IndexButton_Click" Margin="10" />
                    <Button Content="Изменить размер массива" Click="ResizeButton_Click" Margin="10" />
                    <Button Content="Развернуть массив" Click="ReverseButton_Click" Margin="10" />
                    <Button Content="Сортировать массив" Click="SortButton_Click" Margin="10" />
                    <ListBox Name="MassivListBox" Width="300" Height="200" Margin="10" />
                    <TextBox Name="outputTextBox" Width="300" Margin="10" IsReadOnly="True" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

